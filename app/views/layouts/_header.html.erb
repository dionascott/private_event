<div class="header">
  <div class="head">
    <% if signed_in? %>
      <div><h2>Hey, <%= User.find(session[:current_user_id]).name %></h2></div>
      <div><%= link_to "New Event",  new_event_path %></div>
      <div>
        <%= form_for(:session, url: logout_path, method: :delete) do |f| %>
        <%= f.submit "Logout" %>
        <% end %>
      </div>
    <% else %>
      <div><%= link_to "Log In", login_path %></div>
      <div><%= link_to "Create User", new_user_path %></div>
    <% end %>
    <div><%= link_to "All Events", events_path %></div>
  </div>
</div>
